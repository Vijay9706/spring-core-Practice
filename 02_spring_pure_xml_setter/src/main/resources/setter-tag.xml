<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

   <bean id="blackink" class="com.vh.spring.core.beans.BlackInk" />
   <bean id="fountainpen" class="com.vh.spring.core.beans.FountainPen" > 
     <property name ="ink"  ref="blackink" />
   </bean>
   <bean id="writer" class="com.vh.spring.core.beans.Writer"> 
      <property name ="pen"  ref="fountainpen" />
   </bean>
   

  
</beans>